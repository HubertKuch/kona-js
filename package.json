{
  "name": "kona-js",
  "version": "1.2.0",
  "description": "JavaScript helpers for JKona (Kona) framework",
  "author": {
    "name": "Hubert Kuch",
    "url": "https://github.com/HubertKuch",
    "email": "kuchhubert@gmail.com"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "dist/browser.js",
  "types": "./dist/index.d.ts",
  "unpkg": "dist/browser.js",
  "jsdelivr": "dist/browser.js",
  "exports": {
    "browser": "./dist/browser.js",
    "node": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:node": "bun build ./index.ts --outfile=./dist/index.js --target=node",
    "build:browser": "bun build ./browser.ts --outfile=./dist/browser.js --target=browser",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build": "bun run build:node && bun run build:browser && bun run build:types"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}

{
  "name": "kona-js",
  "version": "1.1.2",
  "description": "JavaScript helpers for JKona (Kona) framework",
  "author": {
    "name": "Hubert Kuch",
    "url": "https://github.com/HubertKuch",
    "email": "kuchhubert@gmail.com"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:js": "bun build ./index.ts --outfile=./dist/index.js --target=node",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build": "bun run build:js && bun run build:types"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
